<!DOCTYPE html>
<html>
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Overall page background gradient */
        body {
            background: linear-gradient(135deg, #ffad66, #d2691e);
            font-family: Arial, sans-serif;
        }

        /* Container background with gradient */
        .container {
            background: linear-gradient(135deg, #fff3e0, #ffdab9);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 20px;
        }

        /* Button styles with gradient */
        .btn-custom {
            background: linear-gradient(135deg, #d2691e, #ff8c00);
            border: none;
            color: white;
            transition: background 0.3s;
        }

        .btn-custom:hover {
            background: linear-gradient(135deg, #b94e00, #ff7518);
            color: white;
        }

        /* List item styles */
        .list-group-item {
            background: linear-gradient(135deg, #ffe4b2, #ffcc80);
            border: 1px solid #d2691e;
            color: #4b2e2b;
        }

        .btn-link-custom {
            background: linear-gradient(135deg, #ff7518, #d2691e);
            color: white;
            border: none;
            padding: 5px 15px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            transition: background 0.3s;
        }

        .btn-link-custom:hover {
            background: linear-gradient(135deg, #d2691e, #ff8c00);
            color: white;
        }
    </style>
</head>
<body>
<div class="container mt-5 p-4">
    <h1 class="text-center mb-4" style="color: #d2691e;">Missed Habits</h1>

    <% if (missedHabits.length > 0) { %>
        <h3 class="text-center mb-4" style="color: #ff7518;">You have missed <%= missedHabits.length %> habits</h3>
        <ul class="list-group">
            <% missedHabits.forEach(habit => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><strong><%= habit.name %></strong> - <%= habit.frequency %> (Missed on <%= new Date(habit.date).toLocaleDateString() %>)</span>
                    <form action="/habit/<%= habit._id %>/undo" method="POST">
                        <button type="submit" class="btn btn-custom btn-sm">Undo</button>
                    </form>
                </li>
            <% }) %>
        </ul>
        <a href="/missed/export" class="btn-link-custom mt-3">Export as CSV</a>
    <% } else { %>
        <p class="text-center">No missed habits yet!</p>
    <% } %>

    <div class="mt-4">
        <a href="/" class="btn-link-custom">Back to Home</a>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>